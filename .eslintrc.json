{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es2021": true,
    "browser": true,
    "mongo": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "warn",
      "single",
      "avoid-escape"
    ]
  }
}
